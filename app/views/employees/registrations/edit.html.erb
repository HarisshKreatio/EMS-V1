<div class="container py-5 h-50 w-50">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div>
      <div class="card bg-dark text-white" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center" >
          <h2 class="fw-bold mb-2 text-uppercase">Edit <%= resource_name.to_s.humanize %></h2>
          <div class="mb-md-5 mt-md-4 pb-5">


            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "employees/shared/error_messages", resource: resource %>

              <div class="form-outline form-white mb-4">
                <%= f.label :name %><br />
                <%= f.text_field :name, class:"form-label form-control form-control-lg", placeholder: "Name"  %>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :phone_number %><br />
                <%= f.text_field :phone_number, class:"form-label form-control form-control-lg", placeholder: "Phone number"%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :dob %><br />
                <%= f.date_field :dob, class:"form-label form-control form-control-lg", placeholder: "dob"%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :email %><br />
                <%= f.email_field :email, class:"form-label form-control form-control-lg", placeholder: "email"%>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, class:"form-label form-control form-control-lg", placeholder: "Password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, class:"form-label form-control form-control-lg", placeholder: "Confirm password" %>
              </div>

              <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, class:"form-label form-control form-control-lg", placeholder: "Current password" %>
              </div>


              <div class="form-outline form-white mb-4">
                <%= f.label :gender %><br />
                <%= f.select :gender, ['None', 'Male', 'Female', 'Others']%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :martial_status %><br />
                <%= f.select :martial_status, ['None','Single', 'Married']%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :blood_group %><br />
                <%= f.text_field :blood_group, class:"form-label form-control form-control-lg", placeholder: "Blood group"%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :fathers_name %><br />
                <%= f.text_field :fathers_name, class:"form-label form-control form-control-lg", placeholder: "Father's name"%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :mothers_name %><br />
                <%= f.telephone_field :mothers_name, class:"form-label form-control form-control-lg", placeholder: "Mother's name"%>
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.label :address %><br />
                <%= f.text_field :address, class:"form-label form-control form-control-lg", placeholder: "Address"%>
              </div>

              <div class="actions">
                <%= f.submit "Update" , class:"btn btn-success" %>
              </div>
            <% end %>
            <br>
            <br>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>























